@model IEnumerable<Ludus.Models.Badge>

@{
    ViewBag.Title = "BadgeIndex";
}

<h2>My Badges</h2>

<!--<p> Html.ActionLink("Create New", "Create")</p>-->

<table class="table table-bordered"> 
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Due)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Complete)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Due)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Complete)
        </td>
    </tr>
}

</table>
